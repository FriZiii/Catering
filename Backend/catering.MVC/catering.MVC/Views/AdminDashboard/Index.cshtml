@model AdminDashboardViewModel
@{
    ViewData["Title"] = "AdminDashboard";
}


<div class="main-admin">
    <div class="left-icon-panel-admin">
        <button class="admin-left-panel-button" onclick="showDiv(1)">
            <div class="icon"><img src="~/images/icons/user.svg" alt="Icon 1"></div>
        </button>
        <button class="admin-left-panel-button" onclick="showDiv(2)">
            <div class="icon"><img src="~/images/icons/discount.svg" alt="Icon 2"></div>
        </button>
        <button class="admin-left-panel-button" onclick="showDiv(3)">
            <div class="icon"><img src="~/images/icons/shoping-cart.svg" alt="Icon 3"></div>
        </button>
        <button class="admin-left-panel-button" onclick="showDiv(4)">
            <div class="icon"><img src="~/images/icons/package.svg" alt="Icon 4"></div>
        </button>
    </div>

    <div id="div1-admin" class="hidden-admin section-admin div-with-table-admin">
        <div class="div1-actions-admin">
            <h1 class="title-products-admin"> Products </h1>
            <button class="create-product-button-admin" onclick="openModalAdminProduct()">
                <img src="~/images/icons/plus.svg">
                CREATE PRODUCT
            </button>
        </div>

        <div class="div1-search-bar-admin">
            <input type="text" class="input_field search-bar-admin-products" placeholder="Search..." id="search-product">
            <div class="counter-container-admin">
                <h1 class="search-counter-admin">
                    42
                </h1>
                <h1 class="search-counter-results-admin"> Results </h1>
            </div>
        </div>

        <div class="table-div-admin">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Image Name</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price$</td>
                            <td>@product.ImageName</td>
                            <td>
                                <button class="delete-button-admin">
                                    <img src="~/images/icons/x.svg">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div id="div2-admin" class="hidden-admin section-admin">
        <h2>Title 2</h2>
    </div>

    <div id="div3-admin" class="hidden-admin section-admin">
        <h2>Title 3</h2>
    </div>

    <div id="div4-admin" class="hidden-admin section-admin">
        <h2>Title 4</h2>
    </div>


    <div id="modal-create-admin" class="modal-admin">
        <div class="modal-content-admin">
            <span class="close-admin" onclick="closeModalAdminProduct()">&times;</span>
            <h2 class="modal-title-admin">Create new product</h2>
            <div class="form-group-admin">
                <input class="input_field" placeholder="Name" type="text" id="name" />
            </div>
            <div class="form-group-admin">
                <input class="input_field" placeholder="Price" type="text" id="price" />
            </div>
            <div class="form-group-admin">
                <textarea class="input_field" placeholder="Description" id="description"></textarea>
            </div>
            <div class="form-group-admin">
                <input class="file-input-modal-admin" type="file" id="image" />
            </div>
            <div class="buttons-admin">
                <button class="modal-cancel-admin" onclick="closeModalAdminProduct()">
                    Cancel <img class="" src="~/images/icons/x.svg">
                </button>
                <button class="modal-create-admin">
                    Create New <img class="" src="~/images/icons/plus.svg">
                </button>
            </div>
        </div>
    </div>
</div>