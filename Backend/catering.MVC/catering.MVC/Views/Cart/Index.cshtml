@using catering.Application.Cart;
@model CartModelDto

<h1>Cart</h1>

@if (Model.CartItems != null && Model.CartItems.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.CartItems)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Product.Id</td>
                    <td>@product.Product.Name</td>
                    <td>@product.Product.Price</td>
                    <td>@product.Product.ImageName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products in the cart.</p>
}