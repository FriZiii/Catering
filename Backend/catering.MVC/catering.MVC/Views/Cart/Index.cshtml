@using catering.Application.Managements.CartManagement.Cart;
@model CartModelDto

<h1>Cart</h1>

@if (Model.CartItems != null && Model.CartItems.Count > 0)
{
    @for (var index = 0; index < Model.CartItems.Count; index++)
    {
        var cartItem = Model.CartItems[index];
        <h3>Choose delivery days for @cartItem.Id</h3>

        <div class="calendar-wrapper" id="calendar-wrapper-@index">
            <header>
                <p class="current-date"></p>
                <div class="icons">
                    <span class="prev material-symbols-rounded" data-index="@index">chevron_left</span>
                    <span class="next material-symbols-rounded" data-index="@index">chevron_right</span>
                </div>
            </header>
            <div class="calendar">
                <ul class="weeks">
                    <li>Sun</li>
                    <li>Mon</li>
                    <li>Tue</li>
                    <li>Wed</li>
                    <li>Thu</li>
                    <li>Fri</li>
                    <li>Sat</li>
                </ul>
                <ul class="days">
                </ul>
            </div>
        </div>
    }
}
else
{
    <p>No products in the cart.</p>
}
