@using catering.Application.Managements.AccountManagment.AccountDtos;

@model RegisterInputDto

<div class="center-container-register">
    <form id="registerForm" class="content-register">
        <div class="register-inputs-container">
            <div class="register-left-section">
                <div class="logo-register">
                    <img src="~/images/yummy-logo.svg" alt="Logo">
                </div>

                <h1 class="register-title">Create a new account</h1>
                <p class="register-paragraph right-register-paragraph">
                    Create a new account for free in just a
                    minute
                </p>
                <div class="register-two-in-one-inputs">
                    <div class="input register-small-input">
                        <input class="input_field" type="text" autocomplete="firstname" aria-required="true"
                               placeholder=" " />
                        <span class="input_label">
                            <img src="~/images/icons/user-yellow.svg" class="input_icon" />
                            First Name
                        </span>
                    </div>

                    <div class="input register-small-input">
                        <input class="input_field" type="text" autocomplete="lastname" aria-required="true"
                               placeholder=" " />
                        <span class="input_label">
                            <img src="~/images/icons/user-yellow.svg" class="input_icon" />
                            Last Name
                        </span>
                    </div>
                </div>


                <div class="input register-input">
                    <input class="input_field" type="email" autocomplete="username" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/mail-yellow.svg" class="input_icon" />
                        Email
                    </span>
                </div>

                <div class="input register-input">
                    <input class="input_field" type="password" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/lock-yellow.svg" class="input_icon" />
                        Password
                    </span>
                </div>

                <div class="input register-input">
                    <input class="input_field" type="password" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/lock-yellow.svg" class="input_icon" />
                        Repeat password
                    </span>
                </div>

                <div class="input register-input" id="birthdatePicker">
                    <input class="input_field" type="password" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/calendar-yellow.svg" class="input_icon" />
                        Birthdate
                    </span>
                </div>
            </div>

            <div class="register-right-section">
                <h1 class="register-title">Delivery adress</h1>
                <p class="register-paragraph">
                    Give us your an address where you want your meals to be delivered
                </p>

                <div class="input register-input">
                    <input class="input_field" type="text" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/home-yellow.svg" class="input_icon" />
                        Address 1
                    </span>
                </div>

                <div class="input register-input">
                    <input class="input_field" type="text" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/home-yellow.svg" class="input_icon" />
                        Address 2
                    </span>
                </div>

                <div class="register-two-in-one-inputs">
                    <div class="input register-small-input">
                        <input class="input_field" type="text" autocomplete="new-password" aria-required="true"
                               placeholder=" " />
                        <span class="input_label">
                            <img src="~/images/icons/map-pin-yellow.svg" class="input_icon" />
                            Pastal code
                        </span>
                    </div>

                    <div class="input register-small-input">
                        <input class="input_field" type="text" autocomplete="new-password" aria-required="true"
                               placeholder=" " />
                        <span class="input_label">
                            <img src="~/images/icons/map-pin-yellow.svg" class="input_icon" />
                            State/Region
                        </span>
                    </div>
                </div>


                <div class="input register-input">
                    <input class="input_field" type="text" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/globe-yellow.svg" class="input_icon" />
                        Country
                    </span>
                </div>

                <div class="input register-input">
                    <input class="input_field" type="tel" autocomplete="new-password" aria-required="true"
                           placeholder=" " />
                    <span class="input_label">
                        <img src="~/images/icons/phone-yellow.svg" class="input_icon" />
                        Phone number
                    </span>
                </div>


            </div>
        </div>

        <div class="register-btn-conteiner">
            <button id="registerSubmit" type="submit" class="btn-with-icon">
                <span>Register</span>
                <img src="~/images/icons/log-in.svg">
            </button>
        </div>
    </form>
</div>
@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        flatpickr("#birthdatePicker input", {
            dateFormat: "d-m-Y",
            maxDate: new Date().fp_incr(0),
        });
    });
    </script>
}